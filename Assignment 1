class Superhero:
    def __init__(self, name, power):
        self.name = name
        self.power = power

    def introduce(self):
        print(f"I am {self.name}, and my power is {self.power}!")

# Inheritance
class FlyingHero(Superhero):
    def __init__(self, name, power, speed):
        super().__init__(name, power)
        self.speed = speed
    
    def fly(self):
        print(f"{self.name} is flying at {self.speed} km/h!")

hero1 = Superhero("Flash", "Super Speed")
hero1.introduce()

hero2 = FlyingHero("Superman", "Flight", 900)
hero2.fly()
